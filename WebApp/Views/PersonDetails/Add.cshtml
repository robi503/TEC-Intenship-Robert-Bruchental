@model WebApp.Models.PersonDetails

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>PersonDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label"></label>
                <input asp-for="BirthDay" class="form-control" />
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonCity" class="control-label"></label>
                <input asp-for="PersonCity" class="form-control" />
                <span asp-validation-for="PersonCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Person</label>
                <select asp-for="PersonId" class="form-control" asp-items="@(ViewBag.Persons)">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

